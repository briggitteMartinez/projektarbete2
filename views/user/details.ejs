<!DOCTYPE html>
<html>
  <head>
    <title><%= title %></title>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel='stylesheet' href='/stylesheets/style.css'/>
    <link href="/stylesheets/output.css" rel="stylesheet">
    <script src="/javascripts/details.js" defer></script>
  </head>
  <body>
    <%- include("./header.ejs"); %>

    <main class="bg-gray-200 p-4 rounded-md shadow-lg flex flex-col md:flex-row justify-between mb-6">
      <!-- Bildkarusell -->
      <div class="w-full md:w-1/3 mb-4 md:mb-0 bg-gray-300 rounded-lg overflow-hidden">
        <div class="relative">
          <div class="flex transition-transform duration-300 ease-in-out" id="carousel">
            <div class="w-full flex-shrink-0">
              <img class="w-full h-auto object-cover" src="<%= product.image[0] %>" alt="Produktbild 1">
            </div>
            <div class="w-full flex-shrink-0">
              <img class="w-full h-auto object-cover" src="<%= product.image[1] %>" alt="Produktbild 2">
            </div>
            <div class="w-full flex-shrink-0">
              <img class="w-full h-auto object-cover" src="<%= product.image[2] %>" alt="Produktbild 3">
            </div>
          </div>
          <button class="absolute left-1 top-1/2 transform -translate-y-1/2 bg-white text-gray-700 text-2xl w-12 h-12 flex items-center justify-center rounded-full shadow-lg border border-gray-300 hover:bg-gray-100" id="prevBtn">
            &#x2039;
          </button>
          <button class="absolute right-1 top-1/2 transform -translate-y-1/2 bg-white text-gray-700 text-2xl w-12 h-12 flex items-center justify-center rounded-full shadow-lg border border-gray-300 hover:bg-gray-100" id="nextBtn">
            &#x203A;
          </button>
        </div>
      </div>
    
      <!-- Produktinformation -->
      <div class="w-full md:w-2/3 md:pl-6">
        <h3 class="text-base md:text-2xl font-bold text-gray-800 mb-2"><%= product.name %></h3>
        <p class="text-base md:text-lg font-medium text-gray-600 mb-1"><%= product.brand %></p>
        <p class="text-base md:text-sm text-gray-700 mb-2"><%= product.description %></p>
        <p class="text-base md:text-xl font-semibold text-gray-800 mb-3"><%= product.price %> SEK</p>
        <button class="bg-gray-500 text-white text-sm md:text-base py-2 px-4 rounded-lg shadow-md hover:bg-gray-700 transition">
          LÃ¤gg i varukorg
        </button>
      </div>
    </main>
    
    <h3 class="text-center text-lg font-semibold text-black mb-[2rem]">Liknande Produkter</h3>
        <div class="grid grid-cols-1 gap-2 mb-[2rem] md:grid-cols-3 md:gap-5">
          <% randomProducts.forEach(product => { %>
            <div class="relative">
                <div>
                  <a href="/user/<%= product.slug %>">
                    <img class="w-full" src=<%= product.image %> alt="t-shirt">
                  </a>
                </div>
                <div>
                  <div class="absolute right-50 bottom-0 text-base p-2">
                    <span><%= product.brand %></span>
                  </div>
                    <div class="absolute inset-x-0 bottom-10 text-base p-2 flex justify-center">
                        <span><%= product.name %></span>
                    </div>
                    <div class="absolute right-0 bottom-0 text-base p-2">
                        <span><%= product.price %> SEK</span>
                    </div>
                </div>
            </div>
           <% }) %>
        </div>
    <%- include("./footer.ejs"); %>
  </body>
</html>
