<!DOCTYPE html>
<html>
  <head>
    <title><%= title %></title>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel='stylesheet' href='/stylesheets/style.css'/>
    <link href="/stylesheets/output.css" rel="stylesheet">
  </head>
  <body>
    <%- include("./header.ejs"); %>
    
    <main class="bg-gray-200 p-6 rounded-md shadow-lg flex justify-between mb-[2rem] flex-col md:flex-row">
        <div class="w-full mb-[0.5rem] bg-[#d7d6d6] md:w-1/2">
          <img class="w-4/6" src=<%= product.image[0] %> alt="Placeholder">
        </div>
      <div class="w-full md:w-1/2 md:p-[2.5rem]">
        <h3 class="text-base md:text-2xl font-bold mb-[1rem]"><%= product.name %></h3>
        <p class="text-base md:text-lg font-medium"><%= product.brand %></p>
        <p class="text-base text-gray-700 mb-[1rem]">
          <%= product.description %>
        </p>
        <p class="text-base md:text-xl font-semibold mb-[1rem]"><%= product.price %> SEK</p>
        <button class="bg-gray-600 text-white py-2 px-4 rounded shadow hover:bg-gray-700">
          LÃ¤gg i varukorg
        </button>
      </div>
    </main>
    <h3 class="text-center text-lg font-semibold text-black mb-[2rem]">Liknande Produkter</h3>
        <div class="grid grid-cols-1 gap-2 mb-[2rem] md:grid-cols-3 md:gap-5">
          <% randomProducts.forEach(product => { %>
            <div class="relative">
                <div>
                  <a href="/user/<%= product.slug %>">
                    <img class="w-full" src=<%= product.image[0] %> alt="t-shirt">
                  </a>
                </div>
                <div>
                  <div class="absolute right-50 bottom-0 text-base p-2">
                    <span><%= product.brand %></span>
                  </div>
                    <div class="absolute inset-x-0 bottom-10 text-base p-2 flex justify-center">
                        <span><%= product.name %></span>
                    </div>
                    <div class="absolute right-0 bottom-0 text-base p-2">
                        <span><%= product.price %> SEK</span>
                    </div>
                </div>
            </div>
           <% }) %>
        </div>
    <%- include("./footer.ejs"); %>
  </body>
</html>
