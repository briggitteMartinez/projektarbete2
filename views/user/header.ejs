<header class="bg-white">
  <nav class="container mx-auto py-4 flex flex-col-reverse sm:flex-col gap-4">
    <!-- Andra raden: Sökfält (centrerat) -->
    <div class="search-container flex justify-center mb-6">
      <form
        action="/user/search"
        method="get"
        class="relative w-full max-w-2xl"
      >
        <input
          type="text"
          placeholder="Sök..."
          name="q"
          required
          class="w-full px-6 py-1.5 border border-gray-300 rounded-full focus:outline-none focus:ring-2 focus:ring-gray-500 text-lg"
        />
        <button
          type="submit"
          class="absolute right-6 top-1/2 transform -translate-y-1/2 text-gray-400"
        >
          <svg
            xmlns="http://www.w3.org/2000/svg"
            fill="none"
            viewBox="0 0 24 24"
            stroke="currentColor"
            class="w-6 h-6"
          >
            <path
              stroke-linecap="round"
              stroke-linejoin="round"
              stroke-width="2"
              d="M11 3a8 8 0 100 16 8 8 0 000-16zM21 21l-4.35-4.35"
            />
          </svg>
        </button>
      </form>
    </div>

    <!-- Mobile meny -->
    <ul
      id="mobile-menu"
      class="hidden sm:hidden justify-end space-x-8 text-gray-700 font-medium text-lg"
    >
      <li><a href="/user/search?q=women" class="hover:text-black">Women</a></li>
      <li><a href="/user/search?q=men" class="hover:text-black">Men</a></li>
      <li>
        <a href="/user/search?q=children" class="hover:text-black">Children</a>
      </li>
      <li><a href="/sale" class="hover:text-black">Sale</a></li>
    </ul>

    <!-- Första raden: Logotyp, meny och ikoner (under sökfältet) -->
    <div class="flex items-center justify-between">
      <!-- Logotyp -->
      <div class="logo">
        <a href="/">
          <img
            src="/stylesheets/Images/SoleMates-logo.png"
            alt="Brand Logo"
            class="h-32"
          />
        </a>
      </div>

      <!-- Desktop meny -->
      <ul class="hidden sm:flex space-x-10 text-gray-700 font-medium text-lg">
        <!-- Ökat fontstorlek -->
        <li>
          <a href="/user/search?q=women" class="hover:text-black">Women</a>
        </li>
        <li><a href="/user/search?q=men" class="hover:text-black">Men</a></li>
        <li>
          <a href="/user/search?q=children" class="hover:text-black"
            >Children</a
          >
        </li>
        <li><a href="/sale" class="hover:text-black">Sale</a></li>
      </ul>

      <!-- Ikoner -->
      <div class="icons flex items-center space-x-8">
        <a href="/heart">
          <img
            src="/stylesheets/Images/SoleMates-heart.png"
            alt="Hjärta"
            class="h-8 w-8"
          />
        </a>

        <a href="/dude">
          <img
            src="/stylesheets/Images/SoleMates-dude.png"
            alt="Användare"
            class="h-8 w-8"
          />
        </a>

        <a href="/cart">
          <img
            src="/stylesheets/Images/SoleMates-basket.png"
            alt="Varukorg"
            class="h-8 w-8"
          />
        </a>

        <button id="hamburger-menu" class="block sm:hidden">
          <img
            src="/stylesheets/Images/SoleMates-hamburger.png"
            alt="Varukorg"
            class="h-8 w-8"
          />
        </button>
      </div>
    </div>
  </nav>
</header>
