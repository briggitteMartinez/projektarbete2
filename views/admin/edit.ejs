<!DOCTYPE html>
<html>

<head>
  <title>
    <%= title %>
  </title>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <link rel='stylesheet' href='/stylesheets/style.css' />
  <link href="./stylesheets/output.css" rel="stylesheet">
  <script src="/javascripts/edit.js" defer></script>

</head>

<body>
  <!-- Header -->
  <%- include('./header') %>
    <div class="flex h-screen bg-gray-100">
      <!-- Sidebar -->
      <!--TODO en fungerande sidebar-->
      <aside class="w-64 bg-white text-gray-800 fixed top-0 left-0 h-full shadow-lg pt-16">
        <!-- Logotyp -->
        <div class="p-4">
          <a href="/">
            <img src="/stylesheets/Images/SoleMates-logo.png" alt="Brand Logo" class="h-32" />
          </a>
        </div>
        <!--Navbar-->
        <nav class="mt-8 text-xl ml-4 font-serif">
          <ul>
            <li class="p-2 hover:bg-gray-200">
              <a href="#" class="block">üéõÔ∏è Dashboard</a>
            </li>
            <li class="p-2 hover:bg-gray-200">
              <a href="#" class="block">üëü Products</a>
            </li>
            <li class="p-2 hover:bg-gray-200">
              <a href="#" class="block">üõí Orders</a>
            </li>
            <li class="p-2 hover:bg-gray-200">
              <a href="#" class="block">‚öôÔ∏è Settings</a>
            </li>
          </ul>
        </nav>
      </aside>

      <!-- Main Content -->
      <div class="flex-1 ml-64 pt-16 p-4">
        <div class="bg-white p-6 rounded-lg shadow-md">
          <div class="flex justify-between items-center mb-4">
            <h2 class="text-2xl font-serif">Products List</h2>
            <button class="font-bold bg-gray-800 text-white px-4 py-2 rounded-md hover:bg-gray-500">
              <a href="admin/new">+ Add Product</a>
            </button>
          </div>

          <!-- Table -->
          <table class="min-w-full bg-white border border-gray-200 rounded-md">
            <thead>
              <tr class="border-b bg-gray-100">
                <th class="p-3 text-left">Product Name</th>
                <th class="p-3 text-left">Category</th>
                <th class="p-3 text-left">Color</th>
                <th class="p-3 text-left">Price</th>
                <th class="p-3 text-left">Stock</th>
                <th class="p-3 text-left">Action</th>
              </tr>
            </thead>
            <tbody>
              <% products.forEach(product=> { %>
                <!-- Example row -->
                <tr data-id="<%= product.id %>" class="border-b hover:bg-gray-50">
                  <td class="p-3">
                    <input type="text" name="productName" value="<%= product.name %>"
                      class="w-full bg-transparent border-gray-300 focus:outline-none focus:border-purple-500" readonly>
                  </td>
                  <td class="p-3">
                    <input type="text" name="category" value="<%= product.category %>"
                      class="w-full bg-transparent  border-gray-300 focus:outline-none focus:border-purple-500"
                      readonly>
                  </td>
                  <td class="p-3">
                    <input type="text" name="color" value="<%= product.color %>"
                      class="w-full bg-transparent  border-gray-300 focus:outline-none focus:border-purple-500"
                      readonly>
                  </td>
                  <td class="p-3">
                    <input type="number" name="price" value="<%= product.price %>"
                      class="w-full bg-transparent  border-gray-300 focus:outline-none focus:border-purple-500"
                      readonly>
                  </td>
                  <td class="p-3">
                    <input type="number" name="stock" value="79"
                      class="w-full bg-transparent  border-gray-300 focus:outline-none focus:border-purple-500"
                      readonly>
                  </td>
                  <td class="p-3">
                    <button type="button"
                      class="edit-btn bg-blue-50 mb-2 text-blue-600 px-3 py-2 rounded-lg hover:bg-blue-300 flex items-center gap-2">‚úèÔ∏è
                      Edit</button>
                    <button type="submit"
                      class="bg-green-100 mb-2 text-green-900 px-4 py-2 rounded-lg font-bold hover:bg-green-500 transition-all save-btn hidden">‚úÖ
                      Save</button>
                    <button
                      class="delete-btn bg-red-50 text-red-600 px-3 py-2 rounded-lg hover:bg-red-400 flex items-center gap-2">
                      ‚ùå Delete
                    </button>
                  </td>
                  <!--
                <td class="p-3">
                        <a href="/edit/< %= product.id %>" class="text-blue-500 hover:underline">Edit</a>
                        <a href="/delete/< %= product.id %>" class="text-red-500 hover:underline">Delete</a>
                    </td>
                    -->
                </tr>
                <% }) %>
            </tbody>
          </table>
        </div>
      </div>

</body>

</html>